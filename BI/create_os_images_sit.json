
{
    "variables": {
      "vsphere-server": "vc.example.com",
      "vsphere-user": "administrator@vsphere.local",
      "vsphere-password": "P@ssw0rd",
      
      "vsphere-datacenter": "Datacenter",
      "vsphere-cluster": "Clus1",
      "vsphere-network": "DSwitch-VM Network",
      "vsphere-datastore": "ds1",
      "folder": "template/",
      
      "vm-name": "rhel-7.8-template",
      "vm-cpu-num": "1",
      "vm-mem-size": "1024",
      "vm-disk-size": "62464",
      
      "iso_url": "[ds1] ISO/rhel-server-7.8-x86_64-dvd.iso"
    },
  
    "builders": [
      {
        "type": "vsphere-iso",
    
        "vcenter_server": "{{user `vsphere-server`}}",
        "username": "{{user `vsphere-user`}}",
        "password": "{{user `vsphere-password`}}",
        "insecure_connection": "true",
  
        "datacenter": "{{user `vsphere-datacenter`}}",
        "cluster": "{{user `vsphere-cluster`}}",
        "datastore": "{{user `vsphere-datastore`}}",
        
        "vm_name": "{{user `vm-name`}}",
        "notes": "Image Built using Packer",
  
        "guest_os_type": "rhel7_64Guest",
         "folder": "{{user `folder`}}",
  
        "ssh_username": "root",
        "ssh_password": "server",
        "ssh_timeout": "15m",
  
        "CPUs": "{{user `vm-cpu-num`}}",
        "RAM": "{{user `vm-mem-size`}}",
        "RAM_reserve_all": false,
        "disk_controller_type": "pvscsi",
        "storage": [
          {
            "disk_size": "{{user `vm-disk-size`}}",
            "disk_thin_provisioned": true
          }
        ],
        "network_adapters": [
          {
            "network_card": "vmxnet3",
            "network": "{{user `vsphere-network`}}"
          }
        ],
        
         "boot_order": "disk,cdrom,floopy",
         "convert_to_template": true,
         "iso_paths": "{{user `iso_url`}}",
         "floppy_files": ["kickstart_sit_rhel7_8.cfg"],
        "boot_command": [
        "<wait5><tab>linux ks=hd:fd0:/kickstart_sit_rhel7_8.cfg inst.sshd=1<enter>"
        ]
      }
    ],
    "provisioners": [
      {
        "type": "file",
        "source": "scripts_post_conf/packer_shell.sh",
        "destination": "/tmp/packer_shell.sh"
      },
      {
      "type": "shell",
      "inline": [
        "chmod u+x /tmp/packer_shell.sh",
        "/bin/bash /tmp/packer_shell.sh args"
      ]
    }
    ]
  
  }
  